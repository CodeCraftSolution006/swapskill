# Environment Variables Template
# Copy this file to .env and fill in your values for local development

# Django Secret Key (generate one with: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())")
SECRET_KEY=django-insecure-your-secret-key-here

# Set to False for production
DEBUG=True

# Local development - allow localhost
ALLOWED_HOSTS=127.0.0.1,localhost

# Optional: PostgreSQL connection string (only needed if you want to test with PostgreSQL locally)
# Uncomment and set this if using PostgreSQL
# DATABASE_URL=postgresql://username:password@localhost:5432/skillswap_db
